<%- include ('./header.ejs') %>

      <div id="newContainer">
      <form action="/searches" method="post">
        <input type="text" name="search" placeholder="Enter a title or author" required>
        <fieldset id="titleAuthor">
          <label>
            <span>Title</span>
            <input id = "radio" type="radio" name="search" value="title" required>
          </label>
        </fieldset>
        <fieldset id="titleAuthor">
          <label for="author">
            <span>Author</span>
            <input id = "radio" type="radio" name="search" value="author" required>
          </label>
        </fieldset>
        <button id="submit-button" type="submit">Search the Google Books API</button>
      </form>
    </div>

