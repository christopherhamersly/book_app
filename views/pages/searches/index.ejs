 </head>
  <body>
    <section>
      <form action ="/addBook" method="post"></form>
      <% myBooks.forEach(book => { %>
        <div>
           </span><%= book.title %></span>
           </span><%= book.decription %></span>
           </span><%= book.completion %></span>
           <a href="/books/<% book.id %>">show details</a>
        </div>
        <input type=hidden name="title" value=<=%book.title%>
        <input type=hidden name="authors" value=<=%book.authors%>
        <input type=hidden name="description" value=<=%book.description%>
        <input type=hidden name="description" value=<=%book.id%>
        <button>add to my favorites</button>
        <form>
      <% }) %>
    </section>
  </body>






</html>

